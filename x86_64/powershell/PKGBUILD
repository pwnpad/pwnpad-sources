pkgname=powershell
pkgver=7.5.4
pkgrel=1
pkgdesc="A cross-platform task automation solution made up of a command-line shell, a scripting language, and a configuration management framework"
license=('custom')
arch=('x86_64')
url="https://github.com/PowerShell/PowerShell"
source=("https://github.com/PowerShell/PowerShell/releases/download/v${pkgver}/powershell-${pkgver}-linux-x64.tar.gz")
sha512sums=('6ff028cee3b23c71136de736ae5a93beb7b625215db3398b034fbdb0dd7b034ebf53da32cc47880982f7506054514e9af3cc5defcb4d69a7dd4a08a766469f0b')

package() {
    mkdir -p "$pkgdir/opt/${pkgname}" "$pkgdir/usr/bin"
    cp -a * "$pkgdir/opt/${pkgname}"
    chmod 755 "$pkgdir/opt/${pkgname}/pwsh"
    ln -s "/opt/${pkgname}/pwsh" "$pkgdir/usr/bin/pwsh"
}
