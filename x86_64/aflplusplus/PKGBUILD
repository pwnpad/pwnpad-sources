pkgname=aflplusplus
pkgver=4.34c
pkgrel=1
pkgdesc='American Fuzzing Lop fuzzer with community patches and additional features.'
arch=('x86_64')
url='https://aflplus.plus/'
license=('Apache')
depends=('bash' 'python')
conflicts=('afl')
source=("https://github.com/pwnpad/pwnpad-sources/releases/download/binaries/aflplusplus-${pkgver}-x86_64.tgz" "afl-qemu-switch")
sha512sums=('3d5c90f9f2ded9b87e56fc45ac8b410e0588f8ebed6f7f2555b5a0e7f4f69fcae11a21548b743bd83d80aae55e30a2760715a8598184f86dd786fa9722958e87'
            'c8902a97d1d160bbcc54b87a518920e7993a5ec431f373c4d56f88726dfbaf9411bbd8d9b9c216bb55f2f077ebad339b119feb5a98b71e0d75932a211dd3bea3')

build() {
    tar xzf aflplusplus-${pkgver}-x86_64.tgz
}

package() {
    cp -a usr/ $pkgdir
    cp afl-qemu-switch "$pkgdir/usr/bin"
}
